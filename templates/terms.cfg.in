[default]
dbms = ${config:dbms}
dbname = ${config:dbname}
time = ${config:time}
instant_duration = ${config:instant_duration}

teller_processes = ${config:teller_processes}
kb_host = ${config:kb_host}
kb_port = ${config:kb_port}
pidfile = ${config:pidfile}
logfile = ${config:logfile}
loglevel = ${config:loglevel}

# when a fact has many consecuences,
# it is good for performance to commit every so many.
# in the event of an uncaught exception the kb can
# become inconsistent or incomplete.
commit_many_consecuences = ${config:commit_many_consecuences}

terms_history_file = ${config:terms_history_file}
terms_history_length = ${config:terms_history_length}

daemonize = ${config:daemonize}
